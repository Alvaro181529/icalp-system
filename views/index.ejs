  <!-- Carousel Section -->
  <div id="default-carousel" class="relative w-full  max-2xl:px-16 z-10 max-sm:px-0" data-carousel="slide">
    <!-- Carousel Wrapper -->
    <div class="relative h-[80vh] max-sm:h-64 overflow-hidden">
