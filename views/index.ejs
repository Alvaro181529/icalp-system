  <dialog id="dialog-search"
    class="px-6 py-4 max-w-8xl w-full max-h-[80vh] rounded-xl bg-white shadow-lg border border-gray-300">
    <div class="flex flex-col">
      <!-- Encabezado dentro del dialog sin la clase 'fixed' -->
      <div class="flex justify-between w-full mb-4">
        <h3 class="text-2xl font-semibold text-gray-700">Resultados de Búsqueda</h3>
        <button id="cerrar-dialog" class="text-gray-500 hover:text-gray-700 focus:outline-none"
          aria-label="Cerrar resultados de búsqueda">
          <i class="fa-solid fa-xmark fa-2x"></i>
        </button>
      </div>
      <!-- Lista de resultados -->
      <ul id="result-list"
        class="grid  items-center justify-center md:grid-cols-2 xl:grid-cols-3 overflow-auto max-h-[60vh] space-y-2 gap-1">
        <!-- Los resultados se insertarán aquí dinámicamente -->
      </ul>
    </div>
  </dialog>

  <script defer>
    const searchMat = $("#searchMat");
    const searchUsers = $("#searchCol");
    const searchFormHeader = $("#search-form-header");
    const dialogSearch = $('#dialog-search')
    const cerrarDialogSearch = $('#cerrar-dialog')


    searchFormHeader?.addEventListener("submit", async (e) => {
      e.preventDefault(); // Evitar el envío de formulario o recarga de la página

      // Obtener y recortar los valores de búsqueda
      const searchValueMat = searchMat.value.trim();
      const searchValueM = searchMaterno.value.trim();
      const searchValueP = searchPaterno.value.trim();
      let searchValue = searchCol.value.trim(); // Asegúrate de que esta variable esté bien referenciada

      console.log(searchValueMat);
      // Verificar que ambos campos de búsqueda no estén vacíos
      if (searchValueMat && searchValue) {
        searchMat.value = '';  // Limpiar el valor de searchMat si searchUsers existe
      }

      // Si searchMat tiene valor pero searchValue está vacío, asigna el valor de searchMat a searchValue
      if (searchValueMat && !searchValue) {
        // Aquí asignas a la variable de búsqueda principal (searchValue) el valor de searchMat
        searchValue = searchValueMat;
      }

    
      if (!searchValue && !searchValueM && !searchValueP && !searchMat) {
        alert("Por favor, ingrese un término de búsqueda.");
        return;
      }
      dialogSearch.showModal()

      const url = `search?search=${encodeURIComponent(searchValue)}&paterno=${encodeURIComponent(searchValueP)}&materno=${encodeURIComponent(searchValueM)}`;

      try {
        // Hacer la solicitud fetch
        const response = await fetch(url);
        if (!response.ok) {
          throw new Error("Error en la búsqueda");
        }

        const data = await response.json(); // Asumimos que la respuesta es un JSON
        const resultContainer = document.querySelector("#result-list");
        resultContainer.innerHTML = ""; // Limpiar resultados previos
        if (data.result.users.length > 0) {
          data.result.users.forEach((colegiado) => {
            const listItem = document.createElement("li");
            listItem.classList.add("w-full");
            listItem.innerHTML = `
   <div class="w-[300px] bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="p-4 bg-blue-900 text-white border-b">
        <h3 class="text-lg font-bold text-gray-50 leading-tight text-center text-wrap">
        ${colegiado.Nombres} ${colegiado.Paterno} ${colegiado.Materno}
        </h3>
      </div>

      <div class="p-4 flex justify-center border-b">
        <img
          src="${colegiado.Foto ? '/uploads/imagenes/' + colegiado.Foto : '/public/img/imageDefault.png'}"
          alt="FOTO DE: ${colegiado.Nombres} ${colegiado.Paterno} ${colegiado.Materno}"
          class="w-32 h-32 object-cover"
        />
      </div>

      <div class="p-4 space-y-3 border-b">
        <div class="grid grid-cols-2 gap-2">
          <div class="text-gray-600 text-sm">MATRÍCULA:</div>
          <div class="text-gray-900 font-medium text-sm">${colegiado.Matricula.toString().padStart(5, '0')}</div>
        </div>
        <div class="grid grid-cols-2 gap-2">
          <div class="text-gray-600 text-sm">CONALAB:</div>
          <div class="text-gray-900 font-medium text-sm">${colegiado.MatriculaConalab || 'S/N'}</div>
        </div>
        <div class="grid grid-cols-2 gap-2">
          <div class="text-gray-600 text-sm">FECHA REGISTRO:</div>
          <div class="text-gray-900 font-medium text-sm">${new Date(colegiado.FechaMatriculacionAlColegio).toLocaleDateString()}</div>
        </div>
      </div>

      <div class="p-4 space-y-3 bg-gray-50">
        <div class="text-sm font-semibold text-gray-700 mb-2">
          MAS INFORMACIÓN 
        </div>
        <div class="grid grid-cols-2 gap-2">
          <div class="text-gray-600 text-sm">DIRECCION:</div>
          <div class="text-gray-900 font-medium text-sm text-wrap">${colegiado.DireccionOficina || 'S/N'}</div>
        </div>
        <div class="grid grid-cols-2 gap-2">
          <div class="text-gray-600 text-sm">TELEFONO:</div>
          <div class="text-gray-900 font-medium text-sm text-wrap">${colegiado.TelefonoOficina || 'S/N'}</div>
        </div>
      </div>

      <div class="p-4 flex flex-col justify-center items-center">
        <span
          class='bg-green-100 text-green-800 px-4 py-2 rounded-xl'
              
        >
          ${colegiado.Estado}
        </span>
        <% if (user) { %>
    <a class="font-medium text-blue-600 dark:text-blue-500 hover:underline text-center" href="colegiado/${colegiado.ColegiadoId}">Ir al colegiado</a>
        <% }%>
        </div>
    </div>
      `;
            resultContainer.appendChild(listItem);
          });
        } else {
          const listItem = document.createElement("li");
          listItem.innerHTML = `<h2 class="text-gray-500">No se encontraron resultados </h2>`
          resultContainer.appendChild(listItem);
        }
      } catch (error) {
        console.error("Error en la búsqueda:", error);
        alert("Hubo un problema al realizar la búsqueda. Intenta nuevamente.");
      }
    });
    cerrarDialogSearch.addEventListener('click', () => {
      dialogSearch.close()
    })
  </script>
