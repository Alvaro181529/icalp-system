<%- include('../partials/header', {title, user}) %>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <div class="pt-10">
        <% if(result.Title || result.MenuTitle) { %>
            <div class="max-w-2xl mx-auto my-8 max-sm:px-8">
                <div class="my-8">
                    <h1 class="text-5xl font-bold m-0">
                        <%= result.MenuTitle %>
                    </h1>
                    <h5 class="text-lg mt-2 font-semibold text-gray-600">
                        <%= result.Title %>
                    </h5>
                </div>
                <h5 class="text-xs text-gray-600 text-muted-foreground">Publicado el <%= new
                        Date(result.Datetime).toLocaleString('es-VE', { weekday: 'long' , year: 'numeric' ,
                        month: 'long' , day: 'numeric' , hour: 'numeric' , minute: 'numeric' , second: 'numeric' ,
                        hour12: false }) %>
                </h5>
                <hr class="mx-3 my-4 border-t border-gray-400 mb-5">

                <!-- Editor de Quill -->
                <div id="editor">
                    <%- result.Content %>
                </div>
            </div>
            <% } %>
    </div>
    <style>
        #editor {
            border: none !important;
            /* Elimina el borde */
            padding: 0;
            /* Elimina cualquier relleno que pueda tener */
            background-color: transparent;
            /* Si quieres que el fondo sea transparente */
        }

        /* Opcional: Si quieres también eliminar el borde del contenedor principal del Quill */
        .ql-container {
            border: none !important;
            /* Elimina el borde del contenedor */
            box-shadow: none !important;
            /* Elimina la sombra si está presente */
        }

        /* Opcional: Si no quieres que el área de texto tenga el borde de Quill en el editor */
        .ql-editor {
            border: none !important;
            /* Elimina el borde del área de texto */
            outline: none !important;
            /* Elimina cualquier borde cuando el área de texto esté en foco */
        }
    </style>
    <script defer>
        // Inicializar Quill en modo solo lectura y sin toolbar
        var quill = new Quill('#editor', {
            theme: 'snow', // El tema que prefieras
            readOnly: true, // Hace que el editor sea solo lectura
            modules: {
                toolbar: false // Desactiva la barra de herramientas
            }
        });

        // Obtener el contenido como HTML (si es necesario)
        var contentHTML = quill.root.innerHTML;

    </script>
    <%- include('../partials/footer') %>